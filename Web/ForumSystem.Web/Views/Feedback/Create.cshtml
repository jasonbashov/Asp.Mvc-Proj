@model ForumSystem.Web.InputModels.Feedback.FeedbackCreateViewModel
@{
    ViewBag.Title = "Feedback";
}

<h2>Give feedback</h2>
@using (Html.BeginForm("Create", "Feedback", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.Title, new { @class = "col-md-1 control-label" })
        <div class="col-md-11">
            @Html.EditorFor(model => model.Title, new { placeholder = "Title" })
        </div>
    </div>

    <div class="form-group">
        @Html.EditorFor(model => model.Content)
    </div>

    <div class="form-group text-center">
        <input type="submit" value="Post" class="btn btn-primary btn-lg" />
    </div>
}