@model IEnumerable<ForumSystem.Web.ViewModels.PageableFeedbackList.FeedbackViewModel>
@{
    ViewBag.Title = "All feedback";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-lg-2"><strong>Author</strong></div>
    <div class="col-lg-4"><strong>Title</strong></div>
    <div class="col-lg-4"><strong>Content</strong></div>
    <div class="col-lg-2"><strong>Created On</strong></div>
</div>
@foreach (var feedback in Model)
{
    <div class="row">
        <div class="col-lg-2"><strong>@feedback.Author</strong></div>
        <div class="col-lg-4">@feedback.Title</div>
        <div class="col-lg-4">@Html.Raw(feedback.Content)</div>
        <div class="col-lg-2">@feedback.CreatedOn</div>
    </div>
}
<ul class="pagination">
    @if (ViewBag.ShowPrevious)
    {
        <li><a href="/PageableFeedbackList/Index/@(ViewBag.CurrentPage - 1)">«</a></li>
    }
    @for (int i = 1; i <= @ViewBag.AllPagesCount; i++)
    {
        <li><a href="/PageableFeedbackList/Index/@i">@i</a></li>
    }
    @if (ViewBag.ShowNext)
    {
        <li><a href="/PageableFeedbackList/Index/@(ViewBag.CurrentPage + 1)">»</a></li>
    }
</ul>